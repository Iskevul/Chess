        </Style>
        <Style x:Key="Bishop">
            <Setter Property="Control.Height" Value="60"/>
            <Setter Property="Control.Width" Value="40"/>
            <Setter Property="Control.RenderTransformOrigin" Value="0.5,0.5"/>
        </Style>
        <Style x:Key="Queen">
            <Setter Property="Control.Height" Value="70"/>
            <Setter Property="Control.Width" Value="40"/>
            <Setter Property="Control.RenderTransformOrigin" Value="0.5,0.5"/>
        </Style>
        <Style x:Key="King">
            <Setter Property="Control.Height" Value="70"/>
            <Setter Property="Control.Width" Value="40"/>
            <Setter Property="Control.RenderTransformOrigin" Value="0.5,0.5"/>
        </Style>
        <Style x:Key="Label">
            <Setter Property="Control.HorizontalAlignment" Value="Center"/>
            <Setter Property="Control.VerticalAlignment" Value="Center"/>
            <Setter Property="Control.Background" Value="Azure"/>
            <Setter Property="Control.FontSize" Value="20"/>
            <Setter Property="Control.FontWeight" Value="Bold"/>
        </Style>
